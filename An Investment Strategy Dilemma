def print_large_heading(text):
    print("\n" + "#" * 40)
    print("#" + text.center(38) + "#")
    print("#" * 40 + "\n")

# Usage:
print_large_heading("AI Ethics Stimulator")
print()
print()

def print_underlined_heading(text):
    underline = "#" * len(text)
    print(text)
    print(underline)

# Usage:
print_underlined_heading("An Investment Strategy Dilemma")
print()
print()

